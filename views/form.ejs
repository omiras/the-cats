<body>
    <header>
        <%- include('./partials/nav'); %>
    </header>

    <!-- Quiero realizar un POST al endpoint /new-animal, que deberÃ¡ estar definido en el app.js -->
    <form method="post" action="/animal/new-animal">

        <!-- Grid -->
        <div class="grid">

            <!-- Markup example 1: input is inside label -->
            <label for="breed">
                Breed
                <input type="text" id="breed" name="breed" placeholder="Breed" required>
            </label>

            <label for="urlImage">
                URL image
                <input type="url" id="urlImage" name="urlImage" placeholder="https://..." required>
            </label>

            <label for="Category">Category</label>
            <select id="category" name="category" required>
                <option value="cat" selected>Cat</option>
                <option value="dog">Dog</option>
            </select>

        </div>

        <!-- Button -->
        <button type="submit">Submit</button>

    </form>

</body>

</html>